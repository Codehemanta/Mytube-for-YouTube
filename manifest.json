{
  "version": "4.20.6",
  "manifest_version": 2,
  "name": "Mytube for YouTube™",
  "short_name": "mytube-for-youtube",
  "background": {"page": "lib/chrome/background.html"},
  "description": "Removes all annoying ads and banners from YouTube!",
  "homepage_url": "https://extenhub.blogspot.com/p/mytube-for-youtube.html",
  "permissions": [
    "storage", 
    "webRequest", 
    "http://*/*", 
    "https://*/*", 
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "data/icons/128.png",
    "default_title": "Mytube for Youtube™",
    "default_popup": "lib/chrome/popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true, 
    "page": "data/options/options.html"
  },
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_start",
    "matches": ["*://*.youtube.com/*"],
    "js": ["data/content_script/inject.js"],
    "css": ["data/content_script/inject.css"]
  }],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
